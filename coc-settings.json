{
    "suggest.noselect": false,
    "suggest.echodocSupport": true,
    "suggest.maxCompleteItemCount": 100,
    "diagnostic.infoSign": "✓",
    "diagnostic.hintSign": "◯",
    "coc.preferences.jumpCommand": "tab drop",
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "json",
        "go",
        "svelte",
        "vue",
        "html"
    ],
    "markdownlint.config": {
        "default": true,
        "line_length": false
    },
    "languageserver": {
        "sql": {
            "command": "sqls",
            "args": [
                "-config",
                "$HOME/.config/sqls/config.yml"
            ],
            "filetypes": [
                "sql"
            ]
        }
    }
}
